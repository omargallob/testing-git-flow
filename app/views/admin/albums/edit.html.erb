<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", polymorphic_url([:admin,@albumable,"albums"])  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_polymorphic_url([:admin,@albumable,"album"]) %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_polymorphic_url([:admin,@albumable,@album]) %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.edit", :default => "Edit") %> Album</h2>
    <div class="inner">
      <%= form_for @album, :url => polymorphic_url([:admin,@albumable,@album]), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
<% content_for(:scripts) do %>
<script type="text/javascript">
	$(function() {
		//alert("fck yeah");
		$(".form").validationEngine();
	});
</script>
<% end %>