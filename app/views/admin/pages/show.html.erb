<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_page_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_page_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      <h1>Page Details</h1>
        <p>
          <b><%= t("activerecord.attributes.page.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @page.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.page.navlabel", :default => t("activerecord.labels.navlabel", :default => "Navlabel")) %>:</b>
          <%= @page.navlabel %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.page.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @page.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.page.published", :default => t("activerecord.labels.published", :default => "Published")) %>:</b>
          <%= @page.published %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.page.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @page.body %>
        </p>
        <p>
          <b><%= t("activerecord.attributes.page.position", :default => t("activerecord.labels.position", :default => "Position")) %>:</b>
          <%= @page.position %>
        </p>
        <p>
          <b><%= t("activerecord.attributes.page.image", :default => t("activerecord.labels.image", :default => "Image")) %>:</b>
          <%= image_tag @page.image, :width => 50 %>
        </p>
<% if @page.metatag %>
<h1>Metatags</h1>
        <p>
          <b><%= t("activerecord.attributes.metatag.title", :default => t("activerecord.labels.title", :default => "Metatitle")) %>:</b>
          <%= @page.metatag.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.metatag.description", :default => t("activerecord.labels.description", :default => "Metadescription")) %>:</b>
                   <%= @page.metatag.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.page.keywords", :default => t("activerecord.labels.keywords", :default => "Metakeywords")) %>:</b>
                 <%= @page.metatag.keywords %>
        </p>
<% end %>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_page_path(@page), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_page_path(@page), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>