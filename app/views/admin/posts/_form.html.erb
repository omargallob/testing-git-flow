
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.post.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field validate[required]' %>
    <span class="description">Ex: a unique name</span>
  </div>

  <div class="group">
    <%= f.label :title, t("activerecord.attributes.post.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field validate[required]' %>
    <span class="description">Ex: a unique title</span>
  </div>

  <div class="group">
    <%= f.label :category_id, t("activerecord.attributes.post.category_id", :default => "Category"), :class => :label %>
    <%= f.select(:category_id,Category.find_sub(6).map{|x|["#{x.title}",x.id]},{:include_blank => 'None Selected'}, :class => 'number_field') %>
  </div>

  <div class="group">
    <%= f.label :body, t("activerecord.attributes.post.body", :default => "Body"), :class => :label %>
    <%= f.text_area :body, :class => 'text_area validate[required]' %>
    <span class="description">Ex: a blob of text</span>
  </div>

  <div class="group">
    <%= f.label :published, t("activerecord.attributes.post.published", :default => "Published"), :class => :label %>
    <%= f.check_box :published, :class => 'check_box' %>
  </div>

  <div class="group">
    <%= f.label :published_on, t("activerecord.attributes.post.published_on", :default => "Published on"), :class => :label %>
    <%= f.date_select :published_on, :class => 'datetime_select' %>

  </div>

  <div class="group" style="display:none" >
    <%= f.label :start_at, t("activerecord.attributes.post.start_at", :default => "Start at"), :class => :label %>
    <%= f.date_select :start_at,{},{:disabled => true, :class => 'datetime_select'} %>

  </div>

  <div class="group" style="display:none">
    <%= f.label :end_at, t("activerecord.attributes.post.end_at", :default => "End at"), :class => :label %>
    <%= f.date_select :end_at,{},{:disabled => true,:class => 'datetime_select'} %>
  
  </div>

  <div class="group">
    <%= f.label :image, t("activerecord.attributes.post.image", :default => "Image"), :class => :label %>
    <%= f.file_field :image, :class => '' %>
  </div>
  <div class="group">
    <%= f.label :tags, t("activerecord.attributes.post.tags", :default => "Tags"), :class => :label %>
    <%= f.text_field :tag_list, :class => 'text_field' %>
    <span class="description">Ex: news, actual, cool, old</span>
  </div>
       
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_posts_path, :class => "text_button_padding link_button" %>
</div>