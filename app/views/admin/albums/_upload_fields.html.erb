<div class="fields">
  <div class="group">
    <%= f.label :title, t("activerecord.attributes.page.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>
 <div class="group">
    <%= f.label :description, t("activerecord.attributes.page.body", :default => "Description"), :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %>
    <span class="description">Ex: a simple description</span>
  </div>
 <div class="group">
    <%= f.label :album_id, t("activerecord.attributes.page.body", :default => "AlbumId"), :class => :label %>
    <%= f.text_field :album_id, :class => 'text_field' %>
    
  </div>
  <div class="group">
    <%= f.label :position, t("activerecord.attributes.page.position", :default => "Position"), :class => :label %>
    <%= f.select :position,1..20, :class => 'number_field' %>
    <span class="description">Ex: a simple text</span>
  </div>
 <div class="group">
    <%= f.label :image, t("activerecord.attributes.page.body", :default => "Image"), :class => :label %>
    <%= f.file_field :image, :class => 'file_field' %>
    <span class="description">Ex: a simple description</span>
  </div>

</div>