<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

    <%= stylesheet_link_tag 'blueprint/screen',"application" %>
  	<%= stylesheet_link_tag 'blueprint/print', :media => "print" %>
		<link href='http://fonts.googleapis.com/css?family=PT+Serif' rel='stylesheet' type='text/css'>

    <!--[if lt IE8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif] -->
		<%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
			<header id="top">
				<div id="logo_container" class="lgc">
					<%= link_to(image_tag("logo.png", :width => "200", :id=>"flogo"), root_url) %>
				</div>
			
			</header>
    <div id="home" class="container ">

			<div id="sidebar" class="span-6">
				<nav>
					<%= render_navigation %>
				</nav>
			</div>
			<section id="main" class="span-17">
				
	      <% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <% end %>
				<%= content_tag :h1, yield(:title) if show_title? %>				
      	<%= yield %>
			</section>
			<footer>
				<%= render :partial => "shared/footer" %>
			</footer>
    </div>
    <%= yield(:script) %>
  </body>
</html>
