
  <div class="group">
    <%= f.label :title, t("activerecord.attributes.album.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field validate[required] ' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :description, t("activerecord.attributes.album.description", :default => "Description"), :class => :label %>
    <%= f.cktext_area(:description, :class => 'text_area validate[required]') %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :albumable_id, t("activerecord.attributes.album.albumable_id", :default => "Albumable"), :class => :label %>
    <%= f.number_field :albumable_id, :class => 'number_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :albumable_type, t("activerecord.attributes.album.albumable_type", :default => "Albumable type"), :class => :label %>
    <%= f.text_field :albumable_type, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>
	<% if @album.albumable.blank? %>

	  <div class="group">
	    <%= f.label :category_id, t("activerecord.attributes.album.category_id", :default => "Category"), :class => :label %>
	  	<%= f.select(:category_id,Category.find_sub(9).map{|x|["#{x.title}",x.id]},{:include_blank => 'None Selected'}, :class => 'number_field') %>
	    <span class="description">Ex: a simple text</span>
	  </div>
	<% end %>
	     
