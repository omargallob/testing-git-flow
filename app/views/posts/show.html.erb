<div class="grids">
	<div id="post">
		<div class="post-image">
			<%= image_tag @post.albums.first.uploads.first.image_url(:large) %>

		</div>
		<div class="post-details span-6">
			<h1><%= @post.title %></h1>
			<div class="fb-like" data-href="<%= request.url %>" data-send="false" data-show-faces="false" data-colorscheme="dark" data-width="200" ></div> 
			<hr>
			<div class="post-info-view">
				<p><%= @post.body %></p>
			</div>
			<div class="back">
				<p><%= link_to "Back to List",:back %></p>
			</div>
			<div class="post-info-view">
					<%= render :partial =>"shared/footer" %>		
			</div>
		</div>
		
	</div>
	<div class="fb-comments" data-href="<%= request.url %>" data-num-posts="2" data-width="610"  data-colorscheme="light"  style="float:left;"></div>
</div>