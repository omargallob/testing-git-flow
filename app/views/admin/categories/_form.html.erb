
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.category.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field validate[required]' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :title, t("activerecord.attributes.category.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field validate[required]' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :navlabel, t("activerecord.attributes.category.navlabel", :default => "Navlabel"), :class => :label %>
    <%= f.text_field :navlabel, :class => 'text_field validate[required]' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :parent_id, t("activerecord.attributes.category.parent_id", :default => "Parent"), :class => :label %>
    <%= f.select :parent_id, Category.find_main.map{|x|[" #{x.title}",x.id]},{:include_blank => 'blank (parent)'}, :class => 'number_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :description, t("activerecord.attributes.category.description", :default => "Description"), :class => :label %>
    <%= f.text_area :description, :class => 'text_area validate[required]' %>
    <span class="description">Ex: a simple text</span>
  </div>
 <div class="group">
    <%= f.label :position, t("activerecord.attributes.page.position", :default => "Position"), :class => :label %>
    <%= f.select :position,1..20, :class => 'number_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

 <h1>Metatag</h1>
