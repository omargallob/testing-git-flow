<h1>Galleries</h1>
<div class="fb-like" data-href="http://ragboneman.com/galleries" data-send="false" data-width="450" data-show-faces="false"></div>
<div id="gallery" class="ad-gallery">
  <div class="ad-image-wrapper">
  </div>
  <div class="ad-controls">
  </div>
  <div class="ad-nav">
    <div class="ad-thumbs">
      <ul class="ad-thumb-list">
      	<% @albums.each do |a| %>
      	<%= render :partial => "upload", :collection => a.uploads %>  
      	<% end %>
      </ul>
    </div>
  </div>
</div>


<% content_for(:head) do %>
	<%# stylesheet_link_tag "ad-gallery/jquery.ad-gallery" %>
	<%# javascript_include_tag "ad-gallery/jquery.ad-gallery" %>
	<%# javascript_include_tag "galleries" %>
<% end %>
<% content_for(:script) do %>

<% end %>
